<p id="notice"><%= notice %></p>

<h1>拠点一覧</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @m_branches.each do |m_branch| %>
      <tr>
        <td><%= m_branch.name %></td>
        <td><%= link_to '詳細', admin_m_branches_path(m_branch) %></td>
        <td><%= link_to '更新', edit_admin_m_branch_path(m_branch) %></td>
        <td><%= link_to '削除', admin_m_branch_path(m_branch), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '拠点登録', new_admin_m_branch_path, class: "btn btn-mini btn-primary" %>
