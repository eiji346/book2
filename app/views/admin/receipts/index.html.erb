<p id="notice"><%= notice %></p>

<h1>領収書一覧</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>No</th>
      <th>領収書名</th>
      <th>書籍名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receipts.each do |receipt| %>
      <tr>
        <td><%= receipt.id %></td>
        <td><%= receipt.name %></td>
        <td><%= receipt.product.name %></td>
        <td><%= link_to '詳細', [:admin, receipt], class: "btn btn-mini btn-primary" %></td>
        <td><%= link_to '更新', edit_admin_receipt_path(receipt), class: "btn btn-mini btn-primary" %></td>
        <td><%= link_to '削除', [:admin, receipt], method: :delete, data: { confirm: '削除します。よろしいですか?' }, class: "btn btn-mini btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '登録', new_admin_receipt_path, class: "btn btn-mini btn-primary" %>
