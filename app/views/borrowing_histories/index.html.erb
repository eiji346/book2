<p id="notice"><%= notice %></p>

<h1>Listing Borrowing Histories</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Borrower</th>
      <th>Product</th>
      <th>Borrowed at</th>
      <th>Return untill</th>
      <th>Returned at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @borrowing_histories.each do |borrowing_history| %>
      <tr>
        <td><%= borrowing_history.borrower %></td>
        <td><%= borrowing_history.product %></td>
        <td><%= borrowing_history.borrowed_at %></td>
        <td><%= borrowing_history.return_untill %></td>
        <td><%= borrowing_history.returned_at %></td>
        <td><%= link_to 'Show', borrowing_history %></td>
        <td><%= link_to 'Edit', edit_borrowing_history_path(borrowing_history) %></td>
        <td><%= link_to 'Destroy', borrowing_history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

